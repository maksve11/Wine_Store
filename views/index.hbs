<script>
  const domStartTime = performance.now();
  window.addEventListener('load', () => {
    const domEndTime = performance.now();
    const domTime = domEndTime - domStartTime;
    localStorage.setItem('x-dom-time', domTime);
    const domTimeElement = document.getElementById('dom-time');
    domTimeElement.textContent = domTime;
  });
</script>
